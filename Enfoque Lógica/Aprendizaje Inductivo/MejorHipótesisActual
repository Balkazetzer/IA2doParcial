# mejor_hipotesis_actual.py
class MejorHipotesisActual:
    """Clase para representar la mejor hip贸tesis actual."""
    def __init__(self):
        self.hipotesis = None

    def actualizar_hipotesis(self, nueva_hipotesis):
        """Actualiza la mejor hip贸tesis actual."""
        self.hipotesis = nueva_hipotesis

    def obtener_hipotesis(self):
        """Obtiene la mejor hip贸tesis actual."""
        return self.hipotesis

if __name__ == "__main__":
    mha = MejorHipotesisActual()
    mha.actualizar_hipotesis("hipotesis1")
    hipotesis = mha.obtener_hipotesis()
    print(f"Mejor hip贸tesis actual: {hipotesis}")
