# agentes_logicos.py
class AgenteLogico:
    """Clase para representar un agente l贸gico."""
    def __init__(self):
        self.base_conocimiento = set()

    def percibir(self, percepcion):
        """Agrega una percepci贸n a la base de conocimiento."""
        self.base_conocimiento.add(percepcion)

    def actuar(self):
        """Realiza una acci贸n basada en la base de conocimiento."""
        if "obstaculo" in self.base_conocimiento:
            return "girar"
        else:
            return "avanzar"

if __name__ == "__main__":
    agente = AgenteLogico()
    agente.percibir("obstaculo")
    accion = agente.actuar()
    print(f"Acci贸n del agente: {accion}")
